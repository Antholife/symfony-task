{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <div class="container-table">
        <div class="container-title">
            <h1 class="title-task">Task</h1>
            <div>
                <a href="{{ path('app_task_new') }}" class="btn nav-button">Create new task</a>
                <a href="{{ path('app_logout') }}" class="btn nav-button logout">Logout</a>
            </div>
        </div>
        <table class="task-table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.title }}</td>
                    <td>{{ task.description }}</td>
                    <td>{{ task.date ? task.date|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ task.status }}</td>
                    <td class="actions">
                        <div>
                            <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn">Show</a>
                            <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn">Edit</a>
                            {{ include('task/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="no-records">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
